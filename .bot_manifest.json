{
  "metadata": {
    "last_updated": "$(date -u +'%Y-%m-%dT%H:%M:%SZ')",
    "git_hash": "$(git rev-parse HEAD)"
  },
  "file_analysis": {
    "modified": [$(git diff --name-only HEAD~1 | jq -R -s -c 'split("\n")[:-1]')],
    "new": [$(git ls-files --others --exclude-standard | jq -R -s -c 'split("\n")[:-1]')]
  },
  "critical_modules": {
    "news_analysis": $(find src -type d -name "*news*" | wc -l),
    "adaptive_stoploss": $(find src -type d -name "*stoploss*" | wc -l),
    "usdc_arbitrage": $(find src -type d -name "*arbitrage*" | wc -l)
  }
}
